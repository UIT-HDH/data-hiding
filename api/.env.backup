# FastAPI Steganography Backend - Environment Configuration

# Application Settings
ENVIRONMENT=development
DEBUG=true
APP_NAME="Steganography API"
APP_VERSION=1.0.0
API_PREFIX=/api/v1

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_FILE=logs/app.log

# File Upload Settings
MAX_FILE_SIZE=50  # Maximum file size in MB
ALLOWED_EXTENSIONS=png,jpg,jpeg,bmp,tiff
UPLOAD_DIR=uploads

# Request Settings
REQUEST_TIMEOUT=300  # Request timeout in seconds
MAX_REQUEST_SIZE=52428800  # 50MB in bytes

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Redis Settings (optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=defaultpassword
REDIS_DB=0

# Database Settings (if needed)
DATABASE_URL=sqlite:///./steganography.db

# External API Settings (if needed)
EXTERNAL_API_KEY=your-external-api-key
EXTERNAL_API_URL=https://api.example.com

# Monitoring and Performance
ENABLE_METRICS=true
METRICS_PORT=9090